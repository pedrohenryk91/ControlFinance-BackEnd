generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model user {
  Id String @id @unique
  Email String @unique
  Password String
  Date DateTime @default(now())
  Username String?

  Transactions transaction[]
}

model transaction {
  Id String @id @unique
  Value Float
  Type String
  UserId String
  User user @relation(fields: [UserId], references: [Id])
}